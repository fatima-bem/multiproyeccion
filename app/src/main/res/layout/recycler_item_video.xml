<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCardVideo"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/recVideo"
            android:src="@drawable/icon"
            android:textColor="@color/purple_200"
            android:layout_marginStart="10dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/recFechIVideo"
            android:text="Fecha Inicio"
            android:textSize="12sp"
            android:textColor="@color/purple_200"
            android:layout_toEndOf="@+id/recVideo"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/recFechFVideo"
            android:text="Fecha Final"
            android:textSize="12sp"
            android:textColor="@color/purple_200"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/recFechIVideo"
            android:layout_marginTop="5dp"
            android:layout_marginStart="90dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recDescVideo"
            android:text="Descripcion"
            android:textSize="12sp"
            android:textColor="@color/purple_200"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/recVideo"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/recFechIVideo"
            android:maxLines="3"
            android:layout_marginStart="10dp"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>